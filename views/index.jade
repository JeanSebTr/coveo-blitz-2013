doctype
html(ng-app='coveo')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        meta(name='description', content='')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')

        title Coveo Blitz 2013
        //if lt IE 9
            script(src='//html5shim.googlecode.com/svn/trunk/html5.js')

        link(href='//netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/css/bootstrap-combined.min.css', rel='stylesheet')
        link(rel='stylesheet', href='stylesheets/style.css')

        script(src='//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js')
        script(src='//netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/js/bootstrap.min.js')
        script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.0.3/angular.min.js')
    body
        a(href='https://github.com/jackdbernier/coveo-blitz-2013')
            img(style='position: absolute; top: 0; right: 0; border: 0;', src='https://s3.amazonaws.com/github/ribbons/forkme_right_red_aa0000.png', alt='Fork me on GitHub')
        .wrap
            header
                .jumbotron.hidden-phone
                    .masthead
                        .container
                            .row
                                h1 {Coveo Blitz}
                                p NodeJS + Bootstrap + AngularJS + winners from last year

                .navbar.navbar-inverse.navbar-fixed-top.visible-phone
                    .navbar-inner
                        .container
                            a.brand(href='/') {Coveo Blitz}


            div(ng-view)
            .push

        footer
            .container
                ul.inline
                    li.hidden-phone: span Created by
                    li: a(href='https://twitter.com/alain_gilbert') @alain_gilbert
                    li: a(href='https://twitter.com/jackdbernier') @jackdbernier
                    li: a(href='https://twitter.com/JeanSebTr') @JeanSebTr
                    li.hidden-phone: span during a 8 hours competition
                    li.hidden-phone: a(href='http://events.coveo.com/blitz') Coveo Blitz

        script(src='javascripts/app.js')
        script(src='javascripts/controllers/search.js')
